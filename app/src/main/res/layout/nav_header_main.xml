<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="30dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/apple_image_5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="95dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Newsing IT"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textStyle="bold" />

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/people_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/facebook_people_image"
        app:siBorderColor="@color/colorPrimaryDark"
        app:siBorderWidth="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="75dp"
        android:text="people_name"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="95dp"
        android:text="home link"
        android:textColor="#000000"
        android:textStyle="bold" />


    <Button
        android:id="@+id/my_enroll_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="110dp"
        android:text="개인정보 수정"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:text="알람기능"
        android:textColor="#000000"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_enroll_button"
        android:layout_marginTop="55dp"
        android:text="Empty"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>
