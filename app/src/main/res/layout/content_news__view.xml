<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.apple.sample_app.News_ViewActivity"
    tools:showIn="@layout/activity_news_view">

    <!--카드뷰로 감싸기(Metrial Design적용) -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        card:cardBackgroundColor="#F5FFFA"
        card:cardCornerRadius="8dp"
        card:cardElevation="4dp">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="*"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/headline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:text="*"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </android.support.v7.widget.CardView>

    <!--카드뷰로 감싸기(Metrial Design적용) -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        card:cardBackgroundColor="#F5FFFA"
        card:cardCornerRadius="8dp"
        card:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginLeft="13dp" />

            <TextView
                android:id="@+id/article_content"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="200dp"
                android:maxLines="7"
                android:scrollbars="vertical"
                android:text="*"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/more_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="318dp"
                android:text="자세한 내용 읽기"
                android:textSize="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!--카드뷰로 감싸기(Metrial Design적용) -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        card:cardBackgroundColor="#F5FFFA"
        card:cardCornerRadius="8dp"
        card:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/a_news_like_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/like_button_image" />

            <TextView
                android:id="@+id/news_like_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:text="*"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/a_news_false_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/false_button_image" />

            <TextView
                android:id="@+id/news_false_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:text="*"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
