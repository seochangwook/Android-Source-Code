<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--카드뷰로 감싸기(Metrial Design적용) -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardBackgroundColor="#FFDAB9"
        card:cardCornerRadius="8dp"
        card:cardElevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="이미지를 선택하세요"
            android:textColor="#000000" />

        <Button
            android:id="@+id/select_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="50dp"
            android:background="@android:drawable/ic_menu_gallery" />

        <ImageView
            android:id="@+id/previce_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="100dp" />

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="130dp"></ExpandableListView>

        <Switch
            android:id="@+id/switch_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="190dp" />

    </android.support.v7.widget.CardView>
</RelativeLayout>