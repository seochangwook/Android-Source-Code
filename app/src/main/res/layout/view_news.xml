<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--카드뷰로 감싸기(Metrial Design적용) -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardCornerRadius="8dp"
        card:cardElevation="20dp">

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/news_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="102dp"
            android:layout_toEndOf="@+id/icon_image"
            android:layout_toRightOf="@+id/icon_image"
            android:text="*"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_category_text"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/icon_image"
            android:layout_toRightOf="@+id/icon_image"
            android:text="*"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/get_news_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_count_text"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/icon_image"
            android:layout_toRightOf="@+id/icon_image"
            android:text="*"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:text="* 뉴스종류  :"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="13dp"
            android:text="* 소식개수  :"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="26dp"
            android:text="* 정보날짜  :"
            android:textSize="10dp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
</RelativeLayout>