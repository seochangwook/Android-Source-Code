<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--카드뷰로 감싸기(Metrial Design적용) -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardBackgroundColor="#f0569f"
        card:cardCornerRadius="8dp"
        card:cardElevation="8dp">

        <TextView
            android:id="@+id/d_news_headline_text"
            style="bold"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="headline article"
            android:textColor="#000000"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/d_news_check_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" />

        <ImageView
            android:id="@+id/d_news_article_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/d_news_headline_text"
            android:layout_marginTop="50dp" />

        <Button
            android:id="@+id/d_news_like_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/like_button_image" />

        <TextView
            android:id="@+id/d_news_like_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="7dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/d_news_false_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/false_button_image" />

        <TextView
            android:id="@+id/d_news_false_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="317dp"
            android:layout_marginTop="7dp"
            android:textSize="15dp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
</RelativeLayout>