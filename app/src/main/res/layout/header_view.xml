<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="' News Enroll '"
        android:textColor="#ff00ff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_headline"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Input Headline content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/get_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Galley" />

        <ImageView
            android:id="@+id/get_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/default_select_image" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/select_anews_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조선일보" />

        <RadioButton
            android:id="@+id/select_bnews_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동아일보" />

        <RadioButton
            android:id="@+id/select_cnews_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일경제" />

        <RadioButton
            android:id="@+id/select_dnews_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국일보" />
    </RadioGroup>

    <Button
        android:id="@+id/enroll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enroll" />

</LinearLayout>